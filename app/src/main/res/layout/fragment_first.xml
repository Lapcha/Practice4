<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/textViewLabel"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/fragmentFirstTextViewLabel"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:textColor="@color/black">
    </TextView>

    <Button
        android:id="@+id/buttonToSecondFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/FragmentFirstButtonToSecondFragment"
        android:layout_marginTop="150dp"
        android:layout_gravity="center">
    </Button>

    <Button
        android:id="@+id/buttonToThirdFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/FragmentFirstButtonToThirdFragment"
        android:layout_marginTop="30dp"
        android:layout_gravity="center">
    </Button>

</LinearLayout>